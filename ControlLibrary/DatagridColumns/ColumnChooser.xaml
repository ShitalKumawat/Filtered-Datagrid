<Window x:Class="ControlLibrary.DatagridColumns.ColumnChooser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlLibrary.DatagridColumns"
        mc:Ignorable="d" Background="{DynamicResource DynamicAlternateRowBackgroundBrush}"
        xmlns:listview="clr-namespace:ControlLibrary.ListViewControl"
        Title="ColumnChooser" Height="230"  Width="150" ShowInTaskbar="False" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" WindowStyle="None" >
    <Grid>
        <listview:FilterView Focusable="True"  x:Name="ColumnValuesList"  BorderThickness="2"/>
    </Grid>
</Window>
